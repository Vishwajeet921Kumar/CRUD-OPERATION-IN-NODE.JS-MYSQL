doctype html
html 
    head
        title Form
        style(type="text/css").  
           body {
              font-style:italic ;
           }
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
    body
        h1.text-center.my-3 Form to add medicines which you want
        div.container
            div.row
                div.col-md-12.my-4
                form.form-group(action="/meds/add" method="post")
                    label.h5(for="first") Name of the medicine
                    input#first.form-control.mb-3(type="text" name="medName" placeholder="medicine name")
                    label.h5(for="second") Total number
                    input#second.form-control.mb-3(type="number" name="totalCount" placeholder="count")
                    label.h5(for="third") Brand name
                    input#third.form-control.mb-3(type="text" name="brandName" placeholder="brand")
                    button.btn.btn-primary.mt-2.btn-lg(type="submit") Add
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
