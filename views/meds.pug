doctype html
html 
     head
       title Static files
       style(type="text/css").  
           body {
              font-style:italic ;
           }
       link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous")
     body
        div.container 
        div.row 
           div.col-md-12
              h1.text-center.my-2 List of Medicines available
        div.container 
        div.row 
           div.col-md-12
              table.table.table-bordered.table-striped.table-dark.my-5
                 thead
                    tr
                      th(scope="col") Serial.No.
                      th(scope="col") Medicine name
                      th(scope="col") TotalCount
                      th(scope="col") Brand Name
                      th(scope="col") Edit
                      th(scope="col") Delete 
                 tbody 
                   for medList in totalList
                    tr
                      td=medList.id
                      td=medList.medName
                      td=medList.totalCount
                      td=medList.brandName
                      td
                          a.btn.btn-success(href="/meds/edit/"+medList.id) Edit 
                      td
                          form(action="/meds/delete/"+medList.id method="post")
                              button.btn.btn-danger(type="submit") Delete
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous")
        


